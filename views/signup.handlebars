<h2 class='h3'>Sign in</h2>
<form id='signup-form' class='d-flex flex-column col-2'>
  <div class='form-group my-2'>
    <label for='login-name' class='text-muted'>Username or email</label>
    <input
      type='text'
      class='form-control'
      id='signup-name'
      placeholder='username'
      required
    />
  </div>
  <div class='form-group my-2'>
    <label for='login-pass' class='text-muted'>Password</label>
    <input
      type='password'
      class='form-control'
      id='signup-pass'
      placeholder='password'
      required
    />
  </div>
  <button type='submit' class='btn btn-secondary my-2'>Sign up</button>
</form>

<script src='../js/signup.js'></script>
