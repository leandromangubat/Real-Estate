<div class="mt-3 mt-md-5 mx-md-5">
  <h1 class="header-color">Featured Listings:</h1>
</div><div>
  {{#each sales}}
    <div class="post-block">
      <div class="card mb-3 bg-dark opacity-80">
        <div class="card-header">
          <h2 class="card-title p-2">
            <a class="p-2 rounded text-white">{{streetNumber}}
              {{streetName}}</a>
          </h2>
        </div>
        <div class="card-body opacity-75 rounded">
          <p>Author:
            {{user.name}}
          </p>
        </div>
      </div>
    </div>
  {{/each}}
</div>